--FILE--
<?php
function foo() {
	$a->	// comment1
$b () // comment2
		-> /* comment3 */ $c  () // comment4
		-> /* comment5 */ $d  () // comment6
		-> /* comment7 */ $e  (); // comment8
}
?>
--EXPECT--
<?php
function foo ()
{
    $a-> // comment1
$b()
        -> // comment2
    /* comment3 */
    $c()
        -> // comment4
    /* comment5 */
    $d()
        -> // comment6
    /* comment7 */
    $e(); // comment8
}
?>