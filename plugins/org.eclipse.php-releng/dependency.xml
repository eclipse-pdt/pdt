<?xml version="1.0"?>
<!-- ====================================================================== 
    Properties that must be passed to this script:
    base.install.dir
    dependencyTargets
    local.cache.dir
    dependency.properties

    
    ====================================================================== -->
<project name="test" default="get">

	<target name="get">
		<antcall target="getAndInstall">
			<param name="groupId" value="wtp" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="emfRuntime" />
		</antcall>
		
		<antcall target="getAndInstall">
			<param name="groupId" value="xsdRuntime" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="gef" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="dltk" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="dtp" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="eclipse" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="eclipseTestFramework" />
		</antcall>

	</target>

	<target name="getRuntime">

		<antcall target="getAndInstall">
			<param name="groupId" value="wtpRuntime" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="emfRuntime" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="xsdRuntime" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="gefRuntime" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="dltkRuntime" />
		</antcall>
		<!--<antcall target="getAndInstall">
			<param name="groupId" value="dtpRuntime" />
		</antcall>-->
		<antcall target="getAndInstall">
			<param name="groupId" value="eclipseRuntime" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="cvsClient" />
		</antcall>
		<antcall target="getAndInstall">
			<param name="groupId" value="jdtRuntime" />
		</antcall>

	</target>

	<target name="getAndInstall">
		<ant antfile="${dependencyTargets}" target="checkDependency">
			<property name="groupId" value="${groupId}" />
		</ant>
		<ant antfile="${dependencyTargets}" target="installDependency">
			<property name="groupId" value="${groupId}" />
			<property name="install.destination" value="${base.install.dir}" />
		</ant>
	</target>

</project>

